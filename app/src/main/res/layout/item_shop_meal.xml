<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/iv_meal_logo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_default_test" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/iv_meal_detail"
            android:layout_toRightOf="@+id/iv_meal_logo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_meal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="单人超值汉堡套餐"
                android:textColor="@color/colorTitle"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_meal_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周一到周日"
                    android:textColor="@color/colorContent"
                    android:textSize="11sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/colorSubContent" />

                <TextView
                    android:id="@+id/tv_meal_need_predate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免预约"
                    android:textColor="@color/colorContent"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_meal_price"
                    android:textColor="@color/colorContent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_meal_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_meal_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right_more" />
    </RelativeLayout>

    <View
        style="@style/CommonDividerStyle"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />
</LinearLayout>